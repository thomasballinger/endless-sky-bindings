{
  "name": "endless-sky-bindings",
  "version": "0.1.11",
  "description": "JavaScript bindings for Endless Sky C++ code",
  "main": "dist/index",
  "module": "dist/index.mjs",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomasballinger/endless-sky-bindings.git"
  },
  "author": "Thomas Ballinger",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/thomasballinger/endless-sky-bindings/issues"
  },
  "homepage": "https://github.com/thomasballinger/endless-sky-bindings#readme",
  "scripts": {
    "esbuild-node-base": "./node_modules/.bin/esbuild src/es-node.ts --bundle --format=esm --external:./lib-node.mjs --platform=node --outfile=dist/es-node.mjs",
    "esbuild-web-base": "./node_modules/.bin/esbuild src/es-node.ts --bundle --format=esm --external:./lib-node.mjs --platform=node --outfile=dist/es-node.mjs",
    "esbuild-node": "npm run esbuild-node-base -- --sourcemap",
    "esbuild-web": "npm run esbuild-web-base -- --sourcemap",
    "esbuild-node-watch": "npm run esbuild-node-base -- --sourcemap --watch",
    "esbuild-web-watch": "npm run esbuild-web-base -- --sourcemap --watch",
    "build": "make src/lib-node.mjs src/lib-web.mjs; npm run esbuild-node; npm run esbuild-web; cp src/lib-* dist/; cp src/index.mjs dist/",
    "types": "tsc",
    "test": "mocha -r ts-node/register **/*.test.*s",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "esbuild": "^0.12.28",
    "eslint": "^7.32.0",
    "mocha": "^9.1.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
